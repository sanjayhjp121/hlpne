<script>
    document.addEventListener('DOMContentLoaded', function () {
        var steps = document.querySelectorAll('.step');
        const stepCount = steps.length;
        var details = document.querySelectorAll('.step-detail');
        var progress = document.getElementById('progress');
        var lastActiveStep = null;
        var lastActiveDetail = null;

        // Set the first step as default (you can change the index if needed)
        var defaultStep = steps[0];
        defaultStep.classList.add('active');
        document.getElementById('detail1').classList.add('active'); // Show default text
        lastActiveStep = defaultStep;
        lastActiveDetail = document.getElementById('detail1');

        steps.forEach(function (step, index) {
            step.addEventListener('mouseenter', function () {
                if (this === lastActiveStep) return; // Ignore if it's the last active step

                steps.forEach(function (s) {
                    s.classList.remove('active');
                });

                details.forEach(function (detail) {
                    detail.classList.remove('active');
                });

                this.classList.add('active');

                var stepNumber = this.id.replace('step', '');
                document.getElementById('detail' + stepNumber).classList.add('active');

                var progressWidth = ((stepNumber - 1) / (stepCount - 1)) * 100;
                console.log(progressWidth);
                progress.style.width = progressWidth + '%';

                // Update last active step and detail
                lastActiveStep = this;
                lastActiveDetail = document.getElementById('detail' + stepNumber);
            });

            step.addEventListener('mouseleave', function () {
                
                    defaultStep.classList.add('active');
                    document.getElementById('detail1').classList.add('active'); // Show default text
                    document.getElementById('detail2').classList.remove('active');
                    document.getElementById('detail3').classList.remove('active');
                    document.getElementById('detail4').classList.remove('active');
                    document.getElementById('detail5').classList.remove('active');
                
            });
        });
    });
</script>



