    }

    .stepper {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2em;
        gap: 1.5rem;
        padding: 16px;

        @media (min-width: 992px) {
            gap: 3rem;
        }

        @media (min-width: 1200px) {
            gap: 6rem;
        }
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 15%;
        color: rgba(151, 151, 151, .40);
        cursor: pointer;
    }

    .step.active {
